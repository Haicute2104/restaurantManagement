rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }
    
    function isStaffOrAdmin() {
      return isSignedIn() && getUserRole() in ['staff', 'admin'];
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn();
    }
    
    // Menu Categories
    match /menuCategories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Menu Items
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Orders
    match /orders/{orderId} {
      // Cho phép staff/admin đọc tất cả orders, customer chỉ đọc order của mình
      allow read: if isSignedIn();  // Simplified - check in app logic
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      // Cho phép staff và admin update orders
      allow update: if isSignedIn() && (
        getUserRole() in ['staff', 'admin'] || 
        request.auth.uid == resource.data.userId
      );
      allow delete: if isAdmin();
    }
    
    // Daily Reports
    match /dailyReports/{reportId} {
      allow read: if isStaffOrAdmin();
      allow write: if false;
    }
    
    // Item Reports
    match /itemReports/{reportId} {
      allow read: if isStaffOrAdmin();
      allow write: if false;
    }
    
    // Archived Orders
    match /archivedOrders/{orderId} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}

